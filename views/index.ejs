<div class="container">
  <div class="top">
  <hi class="page-header">Search For Products</h1>
  <form class="form-group" action="/" method="GET">
    <div class="form-row">
      <div class="form-item">
        <label for="name">Enter Name</label>
        <input type="text" name="name" placeholder="Product Name">
      </div>
    </div>
    <div class="form-row form-row-end">
      <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </form>
  
  <br>
  
    <% products.forEach(product => { %>
      <div class="product-row">
        <div class="product-name"><%= product.name %></div>
        <div class="btn-row">
          <a class="btn btn-primary" href="/products/<%= product.id %>">View</a>
          <a class="btn btn-primary"  href="/products/<%= product.id %>/edit">Edit</a>
          <%- include("./partials/deleteForm.ejs", { url: `/products/${product.id}` }) %>
        </div>
      </div>
     <% }) %>
  </div>
</div>

